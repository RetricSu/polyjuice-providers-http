{
  "name": "@polyjuice-provider/core",
  "version": "0.0.1-rc2",
  "main": "lib/index.js",
  "license": "MIT",
  "engines": {
    "node": "14"
  },
  "scripts": {
    "prepare": "husky install",
    "fmt": "prettier --write src/* tests/*",
    "clean": "rm -rf lib/* && rm -rf build/*",
    "compile": "tsc && cp -r src/godwoken/schemas lib/godwoken/",
    "build": "webpack --config=webpack.config.js",
    "example": "yarn gen-config-for-example && cp ./build/browser/PolyjuiceHttpProvider.js example/web/static/js/ && node example/web/server.js",
    "test": "MODE=browser ava && MODE=node ava --timeout=100s",
    "publish": "npm publish",
    "test-publish": "npm publish --dry-run",
    "pack": "npm pack",
    "gen-config-for-example": "cd example && node init_config.js && cd .."
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "/lib"
  ],
  "devDependencies": {
    "@types/node": "^14.14.37",
    "ava": "^3.15.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "browser-env": "^3.3.0",
    "browserify": "^17.0.0",
    "cross-fetch": "^3.1.5",
    "crypto-browserify": "^3.12.0",
    "dotenv": "^10.0.0",
    "husky": "^6.0.0",
    "path": "^0.12.7",
    "prettier": "^2.3.1",
    "process": "^0.11.10",
    "stream-browserify": "^3.0.0",
    "ts-loader": "^8.0.12",
    "typescript": "^4.2.3",
    "webpack": "^5.28.0",
    "webpack-cli": "^4.5.0",
    "webpack-node-externals": "^3.0.0"
  },
  "dependencies": {
    "@ckb-lumos/base": "^0.16.0",
    "buffer": "^6.0.3",
    "encoding": "^0.1.13",
    "eth-sig-util": "^3.0.1",
    "ethers": "5.4.0",
    "jayson": "^3.4.4",
    "keccak256": "^1.0.2",
    "web3": "^1.3.4",
    "xhr2-cookies": "^1.1.0"
  }
}
